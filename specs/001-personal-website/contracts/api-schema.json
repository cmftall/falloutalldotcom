{
  "openapi": "3.0.0",
  "info": {
    "title": "Fallou TALL Personal Website API",
    "version": "1.0.0",
    "description": "API schema for the static content served by falloutall.com"
  },
  "servers": [
    {
      "url": "https://falloutall.com",
      "description": "Production server"
    }
  ],
  "paths": {},
  "components": {
    "schemas": {
      "ProjectCaseStudy": {
        "type": "object",
        "required": ["id", "company", "role", "duration", "description", "impact", "technologies"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the project"
          },
          "company": {
            "type": "string",
            "description": "Name of the company for the project"
          },
          "role": {
            "type": "string",
            "description": "Fallou's role in the project"
          },
          "duration": {
            "type": "string",
            "description": "Duration of the project (e.g., 'MM/YYYY – MM/YYYY')"
          },
          "description": {
            "type": "string",
            "description": "Brief overview of the project challenge/context"
          },
          "impact": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of quantifiable achievements/impacts"
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of technologies used"
          },
          "image": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "Path to a project-specific image"
          },
          "link": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "External link to project details or live demo"
          }
        }
      },
      "ServiceOffering": {
        "type": "object",
        "required": ["id", "title", "description", "icon", "details"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the service"
          },
          "title": {
            "type": "string",
            "description": "Name of the expertise area"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the service/expertise"
          },
          "icon": {
            "type": "string",
            "description": "Name of Lucide React icon"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of specific points or achievements related to the expertise"
          }
        }
      },
      "SkillCategory": {
        "type": "object",
        "required": ["name", "skills"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Category name (e.g., 'Big Data & Cloud Platforms')"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of individual skills"
          }
        }
      },
      "Certification": {
        "type": "object",
        "required": ["id", "name", "issuer", "date"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the certification"
          },
          "name": {
            "type": "string",
            "description": "Name of the certification"
          },
          "issuer": {
            "type": "string",
            "description": "Issuing body"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of achievement or validity period (e.g., 'YYYY-MM-DD' or 'YYYY–YYYY')"
          },
          "link": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "Link to verify the certification"
          }
        }
      },
      "BlogPost": {
        "type": "object",
        "required": ["title", "date", "tags", "excerpt", "content"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the blog post"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Publication date (YYYY-MM-DD)"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Keywords for categorization"
          },
          "excerpt": {
            "type": "string",
            "description": "Short summary of the post"
          },
          "author": {
            "type": "string",
            "default": "Fallou TALL",
            "description": "Author's name"
          },
          "image": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "Path to a featured image"
          },
          "content": {
            "type": "string",
            "description": "Markdown body of the blog post"
          }
        }
      },
      "ContactInfo": {
        "type": "object",
        "required": ["location", "email", "phone", "linkedin", "github", "languages"],
        "properties": {
          "location": {
            "type": "string",
            "description": "Geographic location"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Contact email address"
          },
          "phone": {
            "type": "string",
            "description": "Contact phone number"
          },
          "linkedin": {
            "type": "string",
            "format": "uri",
            "description": "LinkedIn profile URL"
          },
          "github": {
            "type": "string",
            "format": "uri",
            "description": "GitHub profile URL"
          },
          "languages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of languages spoken"
          }
        }
      },
      "SiteConfig": {
        "type": "object",
        "required": ["name", "description", "url"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Site name"
          },
          "description": {
            "type": "string",
            "description": "Site description/tagline"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Canonical site URL"
          },
          "ogImage": {
            "type": "string",
            "format": "uri",
            "nullable": true,
            "description": "Default OpenGraph image"
          },
          "links": {
            "type": "object",
            "description": "Social media links",
            "properties": {
              "linkedin": {
                "type": "string",
                "format": "uri"
              },
              "github": {
                "type": "string",
                "format": "uri"
              },
              "email": {
                "type": "string",
                "format": "email"
              }
            }
          }
        }
      }
    }
  }
}